<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.cmpt276.carbonTracker.AddRouteActivity">

    <Button
        android:text="@string/save_and_use_this_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveRoute_btn"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/useRoute_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/use_this_route_without_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useRoute_btn"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/routeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/max_length_18_chars"
        android:inputType="textPersonName"
        android:maxLength="18"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/routeNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_name"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/routeName"
        android:layout_alignBottom="@+id/routeName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/highwayDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/highway_distance"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/highwayDistance"
        android:layout_alignBottom="@+id/highwayDistance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/cityDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_distance"
        android:textSize="18sp"
        android:layout_below="@+id/highwayDistance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:id="@+id/highwayDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:hint="@string/distance_km"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_below="@+id/routeName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:id="@+id/cityDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:hint="@string/distance_km"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/cityDistanceText"
        android:layout_alignBottom="@+id/cityDistanceText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/totalDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_distance"
        android:textSize="18sp"
        android:layout_below="@+id/cityDistance"
        android:layout_toLeftOf="@+id/routeName"
        android:layout_toStartOf="@+id/routeName"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/totalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/totalDistanceText"
        android:textSize="16sp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.cmpt276.carbonTracker.JourneyListActivity">

    <TextView
        android:id="@+id/textViewJourneyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to Edit. Hold to Delete"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listViewJourneys"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewJourneyList"
        android:layout_above="@+id/buttonBack_journeyList" />

    <Button
        android:id="@+id/buttonBack_journeyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textViewJourneyList"
        android:layout_toStartOf="@+id/textViewJourneyList"
        android:layout_marginBottom="14dp" />

</RelativeLayout>

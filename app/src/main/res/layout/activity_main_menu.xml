<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.cmpt276.carbonTracker.UI.MainMenuActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="75dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/newJourney_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/footprint_btn"
                android:layout_centerHorizontal="true"
                android:text="@string/new_journey" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/viewJourneys_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/view_journeys" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button_UtilityList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/viewJourneys_btn"
                android:layout_alignBottom="@+id/viewJourneys_btn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/utilities" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/footprint_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tip_btn"
                android:layout_centerHorizontal="true"
                android:text="@string/view_footprint" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/tip_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/view_tips" />
        </TableRow>
    </TableLayout>

    <Switch
        android:id="@+id/treeUnitToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unitsText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/treesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trees"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/treeUnitToggle"
        android:layout_alignBottom="@+id/treeUnitToggle"
        android:layout_toRightOf="@+id/treeUnitToggle"
        android:layout_toEndOf="@+id/treeUnitToggle" />

    <TextView
        android:id="@+id/unitsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Units"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/CO2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CO2"
        android:textSize="18sp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/treeUnitToggle"
        android:layout_alignBottom="@+id/treeUnitToggle"
        android:layout_toLeftOf="@+id/unitsText"
        android:layout_toStartOf="@+id/unitsText" />

</RelativeLayout>